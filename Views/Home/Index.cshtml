@using Diplomm.Models.Tables;
@using System.ComponentModel.DataAnnotations;
@model List<IGrouping<Groups?, TimetableTable>>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Актуальное расписание</h1>
    <h2>@ViewBag.Dates</h2>
</div>


<table>
    <thead>
        <tr>
            <th></th>
            @foreach (var item in Enum.GetValues(typeof(DayOfWeeks)))
            {
                <th>@((item.GetType().GetField(item.ToString()).GetCustomAttributes(typeof(DisplayAttribute), false) as DisplayAttribute[])[0].Name)</th>
            }
        </tr>
        <tr>
            <th>Гр.</th>
            <th>№</th>
            <th colspan="5"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.First().Group.GroupName</td>
                @foreach (var item in Enum.GetValues(typeof(DayOfWeeks)))
                {
                    <td>
                        <table>
                            @foreach (TimetableTable groupDayOfWeek in group.Where(it => it.DayOfWeek == (DayOfWeeks)item))
                            {
                                string style = "";
                                if(groupDayOfWeek.Number == 0)
                                {
                                    style = "cancel";
                                }
                                <tr>
                                    <td>@if (groupDayOfWeek.Number == 0) { <i class="bi bi-x-circle"></i> } else { @(groupDayOfWeek.Number) }</td>
                                    <td class="@(style)"> @(groupDayOfWeek.Subject.SubjectName)</td>
                                    <td rowspan="2"><a class="btn btn-warning" asp-controller="ChangesTables" asp-action="Create" asp-route-idTimetable="@(groupDayOfWeek.TimetableID)" asp-route-idEmployee="@(groupDayOfWeek)"><i class="bi bi-arrow-down-up"></i></a><a class="btn btn-danger" asp-controller="ChangesTables" asp-action="Create" asp-route-idTimetable="@(groupDayOfWeek.TimetableID)" asp-route-idEmployee="@(groupDayOfWeek)" asp-route-chancheAction="@(ChancheActions.Cancel)"><i class="bi bi-x-circle"></i></a></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><small>@(groupDayOfWeek.Employee.FullName)</small></td>
                                    <td></td>
                                </tr>
                            }
                        </table>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="TimetableTables" asp-action="Create" asp-route-idGroup="@(group.First().fkGroups)" asp-route-dayOfWeek="@((DayOfWeeks)item)">Добавить</a>
                    </td>
                }
            </tr>
            <tr>
                <td colspan="8"><hr /></td>
            </tr>
        }

    </tbody>

</table>
