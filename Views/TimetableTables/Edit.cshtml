@model Diplomm.Models.Tables.TimetableTable

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Изменение урока в расписании</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimetableID" />
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select asp-for="DayOfWeek" asp-items="@Html.GetEnumSelectList<DayOfWeeks>()" class="form-control"></select>
                <span asp-validation-for="DayOfWeek" class="text-danger">День недели</span>
            </div>
            <div class="form-group">
                <label asp-for="fkPosts" class="control-label">Предмет</label>
                <select asp-for="fkPosts" class="form-control" asp-items="ViewBag.fkPosts"></select>
                <span asp-validation-for="fkPosts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fkOrganizations" class="control-label">Группа</label>
                <select asp-for="fkOrganizations" class="form-control" asp-items="ViewBag.fkPosts"></select>
                <span asp-validation-for="fkOrganizations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fkEmployees" class="control-label">Преподаватель</label>
                <select asp-for="fkEmployees" class="form-control" asp-items="ViewBag.fkEmployees"></select>
                <span asp-validation-for="fkEmployees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
