@model Diplomm.Models.Tables.TimetableTable

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>Измените урок в расписании</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimetableID" />
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select asp-for="DayOfWeek" asp-items="@Html.GetEnumSelectList<DayOfWeeks>()" class="form-control"></select>
                <span asp-validation-for="DayOfWeek" class="text-danger">День недели</span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger">№</span>
            </div>
            <div class="form-group">
                <label asp-for="fkSubjects" class="control-label"></label>
                <select asp-for="fkSubjects" class="form-control" asp-items="ViewBag.fkSubjects"></select>
                <span asp-validation-for="fkSubjects" class="text-danger">Дисциплина</span>
            </div>
            <div class="form-group">
                <label asp-for="fkGroups" class="control-label"></label>
                <select asp-for="fkGroups" class="form-control" asp-items="ViewBag.fkGroups"></select>
                <span asp-validation-for="fkGroups" class="text-danger">Группа</span>
            </div>
            <div class="form-group">
                <label asp-for="fkEmployees" class="control-label"></label>
                <select asp-for="fkEmployees" class="form-control" asp-items="ViewBag.fkEmployees"></select>
                <span asp-validation-for="fkEmployees" class="text-danger">Преподаватель</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
