@model IEnumerable<Diplomm.Models.Subjects>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список предметов</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubjectId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.SubjectId">Просмотр</a> |
                <a asp-action="Delete" asp-route-id="@item.SubjectId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
