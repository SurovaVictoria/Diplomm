@model Diplomm.Models.Tables.OrganizationTable

@{
    ViewData["Title"] = "Delete";
}


<h3>Вы действительно хотите удалить это? </h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Группа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShopName)
        </dd>
        <dt class = "col-sm-2">
            Специальность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ShopId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="bi bi-arrow-left-square" asp-action="Index">Вернуться</a>
    </form>
</div>
